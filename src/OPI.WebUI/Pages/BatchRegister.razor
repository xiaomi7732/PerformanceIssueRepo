@page "/Import"
@using Microsoft.AspNetCore.Components.Forms

<div>
    <p>Please follow this <code>CSV schema</code> for batch appending: id,issue*,description*,recommendation*,rationale,docUrl.
    </p>
    <p>Notice: id in guid will be taken directly, id in form of non-guid would be treated legacy id, and a new guid will be assigned.</p>
</div>

<div>
    <EditForm Model="@Content" OnValidSubmit="@HandleSubmitAsync">
        <DataAnnotationsValidator />
        <InputTextArea class='edit-area' id="content" @bind-Value="Content.Value"></InputTextArea>

        <ValidationSummary />

        <div>
            <button type="submit">Import</button>
        </div>
    </EditForm>
</div>
